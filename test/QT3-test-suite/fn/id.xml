   <test-case name="fn-id-24">
      <description>Invalid xml:id - alternative results</description>
      <created by="Michael Kay" on="2019-05-11"/>
      <dependency type="spec" value="XQ10+"/>
      <test><![CDATA[
         let $data := document {
            <stuff>
               <thing xml:id=" a123 ">once</thing>
               <thing xml:id=" a456 ">twice</thing>
               <thing xml:id=" 789x ">thrice</thing>
            </stuff>
          }
          return $data/id('a123')/string()  
         ]]>
      </test>
      <result>
         <any-of>
            <error code="XQDY0091"/>
            <assert-eq>"once"</assert-eq>
         </any-of>
      </result>
   </test-case>
   
