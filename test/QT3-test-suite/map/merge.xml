        <modified by="Michael Kay, Saxonica" on="2014-05-13" change="spec change and function renaming"/>
        <environment ref="map"/>
        <test>deep-equal(map{"a":1,"b":2,"c":(3,4,5)}, map{"c":(3,4,5),"a":1,"b":2})</test>
